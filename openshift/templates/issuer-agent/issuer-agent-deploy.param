#=========================================================
# OpenShift template parameters for:
# Component: .
# Template File: ../openshift/templates/issuer-agent/issuer-agent-deploy.yaml
#=========================================================
NAME=issuer-agent
APP_NAME=issuer
APP_GROUP=issuer-kit-agent
SUFFIX=-bcdevops
ROLE=agent
APPLICATION_DOMAIN=bcdevops-issuer-agent-dev.pathfinder.gov.bc.ca
ADMIN_APPLICATION_DOMAIN=bcdevops-issuer-agent-admin-dev.pathfinder.gov.bc.ca
ROUTE_TIMEOUT=120s
IMAGE_NAMESPACE=admgjk-tools
NAMESPACE_NAME=admgjk
SOURCE_IMAGE_NAME=issuer-agent
TAG_NAME=dev
AGENT_LABEL_NAME=BCDevOps-Issuer-DEV
AGENT_BASE_URL=https://bcdevops-issuer-agent-dev.pathfinder.gov.bc.ca
WEBHOOK_URL=http://issuer-api-bcdevops:8080/webhooks
AGENT_ADMIN_PORT=8024
ADMIN_API_KEY=[a-zA-Z0-9]{16}
AGENT_HTTP_PORT=8021
GENESIS_FILE_URL=http://test.bcovrin.vonx.io/genesis
LOG_LEVEL=WARNING
TAILS_FILES_VOLUME_CLASS=netapp-file-standard
TAILS_FILES_VOLUME_SIZE=1Gi
TAILS_SERVER_BASE_URL=https://tails-server-dev.pathfinder.gov.bc.ca
WALLET_STORAGE_TYPE=postgres_storage
WALLET_HOST=issuer-wallet
WALLET_HOST_PORT=5432
WALLET_STORAGE_CONFIG={\"url\":\"${POSTGRESQL_WALLET_HOST}:${POSTGRESQL_WALLET_PORT}\",\"max_connections\":5}
WALLET_STORAGE_CREDS={\"account\":\"${POSTGRESQL_WALLET_USER}\",\"password\":\"${POSTGRESQL_WALLET_PASSWORD}\",\"admin_account\":\"postgres\",\"admin_password\":\"${POSTGRESQL_WALLET_ADMIN_PASSWORD}\"}
WALLET_CREDENTIAL_STORE_NAME=issuer-agent-wallet-credentials
WALLET_KEY=[a-zA-Z0-9]{10}
WALLET_SEED=[a-zA-Z0-9]{32}
WALLET_DID=[a-zA-Z0-9]{16}
CPU_REQUEST=10m
CPU_LIMIT=1000m
MEMORY_REQUEST=10Mi
MEMORY_LIMIT=1Gi
